<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginStart="5dp">

    <ImageView
        android:id="@+id/seeAllFavoritesBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/see_all_icon"
        app:tint="@color/FavoriteStoryColor"
        android:contentDescription="@string/see_all_favorites"
        android:layout_marginTop="2dp"
        />

    <TextView
        android:id="@+id/allFavoritesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_favorites"
        android:textColor="@color/onPrimaryColor"
        android:textSize="12sp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        />
</LinearLayout>
